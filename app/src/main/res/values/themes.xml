    <style name="BottomNavTextStyleIsActive">
        <item name="android:fontFamily">@font/figtree_semi_bold</item>
    </style>

    <style name="BottomNavTextStyleIsNonActive">
        <item name="android:fontFamily">@font/figtree_medium</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#00368B</item>
    </style>

    <style name="TextSearchBar" parent="TextAppearance.Material3.SearchBar">
        <item name="android:fontFamily">@font/figtree_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TabFont" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/figtree_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Material3.ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">@font/figtree_regular</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="Theme.WanderWise" parent="Base.Theme.WanderWise" />
